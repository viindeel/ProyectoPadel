<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PadelScore" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primario</item>
        <item name="colorOnPrimary">@color/color_sobre_primario</item>
        <item name="colorSecondary">@color/color_secundario</item>
        <item name="colorOnSecondary">@color/color_sobre_secundario</item>
        <item name="android:windowBackground">@color/color_fondo</item>
        <item name="android:fontFamily">@font/karla</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="MenuItemTextStyle" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/karla</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
