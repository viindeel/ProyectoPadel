<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.padelscore" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primario</item>
        <item name="colorOnPrimary">@color/color_sobre_primario</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secundario</item>
        <item name="colorOnSecondary">@color/color_sobre_secundario</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_fondo</item>
        <!-- Background and surface colors. -->
        <item name="android:colorBackground">@color/color_fondo</item>
        <item name="colorSurface">@color/color_superficie</item>
        <item name="colorOnSurface">@color/color_sobre_superficie</item>
        <item name="colorSurfaceVariant">@color/color_superficie_variante</item>
        <item name="colorOnSurfaceVariant">@color/color_sobre_superficie_variante</item>
        <item name="colorOutline">@color/color_contorno</item>

        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.App.HeadlineLarge</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.App.TitleLarge</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.App.BodyLarge</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.App.LabelLarge</item>

        <!-- Component Styles -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
    </style>

    <style name="Tema.PadelScore.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/fondo_splash</item>
        <item name="android:statusBarColor">@color/color_fondo</item>
    </style>

    <!-- To enable Dynamic Color on supported devices (Android 12+), you can create
         a values-v31/themes.xml file and have it inherit from a DayNight.DynamicColors theme.
         For example:
         <style name="Theme.padelscore" parent="Theme.Material3.DayNight.DynamicColors.NoActionBar">
             // ... your other theme attributes ...
         </style>
    -->
</resources>
