<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/color_superficie"
    app:strokeColor="@color/color_contorno"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/match_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/color_sobre_superficie"
            tools:text="2026-02-15" />

        <TextView
            android:id="@+id/match_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            android:textColor="@color/color_secundario"
            tools:text="Finalizado" />

        <TextView
            android:id="@+id/match_jugadores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_fecha"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/color_sobre_superficie_variante"
            tools:text="Juan Pérez &amp; Pedro López vs Ana García &amp; María Sánchez" />

        <TextView
            android:id="@+id/match_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_jugadores"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/color_sobre_superficie_variante"
            tools:text="6-4, 7-5" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
