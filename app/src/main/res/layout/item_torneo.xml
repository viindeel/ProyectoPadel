<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_glass_pill"
    android:gravity="center_vertical"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/torneo_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_trophy"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/torneo_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Torneo"
            android:textStyle="bold"
            android:textColor="@color/color_primario"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/torneo_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textColor="@color/colorOnSurface"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/torneo_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UbicaciÃ³n"
            android:textColor="@color/colorOnSurface"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>

